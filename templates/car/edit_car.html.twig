{% extends 'base.html.twig' %}
{% block title %}
	{% trans %}Modifier Voiture{% endtrans %}
{% endblock %}
{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success" role="alert">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container">
		<div class="form_reponse ">
			<h3 class="h3">{% trans %}Modifier une Voiture{% endtrans %}</h3>
			{{ form_start(form) }}
			<table>
				<tr>
					<td>{{ form_label(form.categorie, 'Categorie') }}</td>
					<td style="width:80%;">{{ form_widget(form.categorie,{ 'attr': {'placeholder': " "} }) }}</td>

				</tr>

				<tr>
					<td>{{ form_label(form.marque, 'Marque') }}</td>
					<td>{{ form_widget(form.marque,{ 'attr': {'placeholder': ""} }) }}
					</td>
				</tr>
				<tr>
					<td>{{ form_label(form.model, 'Model') }}</td>
					<td>{{ form_widget(form.model,{ 'attr': {'placeholder': ""} }) }}
					</td>
				</tr>

				<tr>
					<td>{{ form_label(form.color, 'Couleur') }}</td>
					<td>{{ form_widget(form.color,{ 'attr': {'placeholder': ""} }) }}
					</td>
				</tr>
				<tr>
					<td>{{ form_label(form.prixLoc, 'Prix Location') }}</td>
					<td>{{ form_widget(form.prixLoc,{ 'attr': {'placeholder': " "} }) }}</td>
				</tr>

				<tr>
					<td>{{ form_label(form.reduction, '% Reduction') }}</td>
					<td>{{ form_widget(form.reduction,{ 'attr': {'placeholder': ""} }) }}
					</td>
				</tr>
				<tr>
					<td>{{ form_label(form.descri, 'Caracteristiques Techniques') }}</td>
					<td>{{ form_widget(form.descri,{ 'attr': {'placeholder': ""} }) }}
					</td>
				</tr>
				<tr>
					<td>{{ form_label(form.image,'Image' )}}</td>
					<td>{{ form_widget(form.image) }}
					</td>
				</tr>
				<tr>
					<td>
						<button class="b1" type="submit ">{% trans %}Enregistrer{% endtrans %}</button>
					</td>
				</tr>
				{{ form_end(form) }}
			</table>
		</div>
	</div>
{% endblock %}
