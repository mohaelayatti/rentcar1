{% extends 'base.html.twig' %}
{% block title %}
	{% trans %}Reservations{% endtrans %}
{% endblock %}
{% block body %}
	<div><br>
		<center>
			<button class="boutonarticle">
				<h3 class="animate__animated animate__zoomIn">{% trans %}Liste Reservations{% endtrans %}</h3>
			</button>
		</center>
		<div class="liste_vente">
			<table class="table table-dark">

				<thead class="thead">
					<tr>
						<th>{% trans %}Id{% endtrans %}</th>
						<th>{% trans %}Date Reservation{% endtrans %}
						</th>
						<th>{% trans %}Nom Client{% endtrans %}</th>
						<th>{% trans %}Date Depart{% endtrans %}</th>

						<th>{% trans %}type de voiture{% endtrans %}</th>
						<th>{% trans %}Nbre Jours{% endtrans %}</th>
						<th>{% trans %}prix du jour{% endtrans %}</th>

						<th>{% trans %}Montant{% endtrans %}</th>
						<th>{% trans %}Fact/Bon{% endtrans %}</th>
						<th>{% trans %}Mod{% endtrans %}</th>
						<th>{% trans %}Supr{% endtrans %}</th>
					</tr>
				</thead>
				{% if res |length == 0 %}
					<tbody>
						<tr>
							<td colspan="10">{% trans %}Aucune Reservation{% endtrans %}</td>
						</tr>
					</tbody>
				{% else %}
					{% for v in res %}
						<tr>
							<td>{{v.id}}</td>
							<td>{{v.dateReservation | date('d/m/Y')}}</td>
							<td>{{v.Client.NomClient}}</td>
							<td>{{v.dateDepart | date('d/m/Y')}}</td>
							<td>{{v.Car.Nom}}</td>
							<td>{{v.NbreJour}}</td>
							{% set prix = v.car.PrixLoc - (v.car.PrixLoc * v.car.Reduction/100) %}
							<td>{{prix|number_format(2,',','')}}</td>
							<td>{{(v.NbreJour * prix)|number_format(2,',','') }}</td>
							<td>
								<ul>
									<li class="nav-item dropdown" style="list-style: none;">
										<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">{% trans %}Facture/Bon{% endtrans %}</a>

										<div class="dropdown-menu" aria-labelledby="navbarDropdown">
											<a class="dropdown-item" href="{{path( 'fa',{id:v.id})}}">{% trans %}facture{% endtrans %}</a>

											<a class="dropdown-item" href="">{% trans %}bon livraison{% endtrans %}</a>
										</div>
									</li>
								</ul>
							</td>
							<td>
								<a href="{{path( 'edit_reservation',{id:v.id})}} ">

									<img src="{{ asset('images/edit.png' ) }} "/></a>
							</td>
							<td>
								<a href="{{path( 'delete_reservation',{id:v.id})}} " onclick="return confirm( '{% trans %}Vous etes sur de vouloir supprimer?{% endtrans %}') ">

									<img src="{{ asset('images/delet.png' ) }} "/></a>
							</td>

						</tr>
					</tbody>
					{% endfor%}</table>
			</div>
		{% endif %}
	</div>
{% endblock %}
