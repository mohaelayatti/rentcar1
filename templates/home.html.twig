{% extends 'base.html.twig' %}
{% block title %}
	{% trans %}Acceuil{% endtrans %}
{% endblock %}
{% block body %}
	<div class="col-md-12">
		<div class="container">
			<div class="section-title">
				<div class="row">
					{% for cat in cat %}
						{% for a in cat.cars %}
							<div class="col-md-6 col-xs-4 ">
								<div class="product">
									<div class="product-name">
										<h6 class="h5">Categorie:
											{{cat.nomCategorie}}</h6>
										<a href="">{{a.nom}}</a>
									</div>
									<div class="product-img">
										<div class="product-label">

											<a href="#show{{a.id}}" data-toggle="modal">
												<button class="bouton1">{% trans %}Voir Plus{% endtrans %}</button>
											</a>
										</div>
										<div class="product-promo">
											{% if a.reduction == 0 %}
													{% else %}<img src="{{ asset('images/wow.png' ) }}"/>

													<span class="p_clign">{{a.reduction}}
														%</span>

											{% endif %}
										</div>
										<img src="{{ asset('uploads/brochures/'~ a.image) }}" alt=" ">
									</div>
									<div class="product-body ">
										{% if a.reduction == 0 %}
											<div class="product-price">{{a.prixLoc}}
												<span>{% trans %}Dhs{% endtrans %}</span>
											</div>
										{% else %}
											<div class="product-price">{{(a.prixLoc - (a.prixLoc * a.reduction/100))|number_format(2,',','')}}
												<span>{% trans %}Dhs{% endtrans %}</span>
												<del class="product-old-price ">
													{{a.prixLoc}}</del>

											</div>
										{% endif %}

									</div>
									<div id="show{{a.id}}" class="modal fade ">
										<div class="modal-dialog ">
											<div class="modal-content ">
												<div class="modal-header ">


													<h3>{% trans %}Descriptif Produit{% endtrans %}</h3>

												</div>
												<div class="modal-body ">


													<p><img src="{{ asset('uploads/brochures/'~ a.image) }}" alt=" " style="width:50px;height:50px;">


														<span style=" color:aqua ">{{a.nom|upper}}:</span><br>
														<span>{{a.descri}}</span>
													</p>
												</div>
												<div class="modal-footer "></div>
											</div>
										</div>
									</div>

								</div>
							</div>
						{% endfor %}

					{% endfor %}
				</div>

			</div>

		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="{{asset('js/jquery.min.js')}} "></script>
	<script src="{{asset('js/bootstrap.min.js')}} "></script>
	<script src="{{asset('js/slick.min.js')}} "></script>
	<script src="{{asset('js/nouislider.min.js')}} "></script>
	<script src="{{asset('js/jquery.zoom.min.js')}} "></script>
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js " integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n " crossorigin="anonymous "></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js " integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6 " crossorigin="anonymous "></script>
{% endblock %}
