			<th>{% trans %}Nom Client{% endtrans %}</th>
			<th>{% trans %}Date{% endtrans %}</th>
			<th>{% trans %}Articles vendus{% endtrans %}</th>
			<th>{% trans %}Montant{% endtrans %}</th>
			<th>{% trans %}Avance{% endtrans %}</th>
			<th>{% trans %}Reste{% endtrans %}</th>
		</tr>
		{% for v in vente %}
			{% set somme = 0 %}
			{% for a in v.articles %}
				{% set somme = somme + (a.prixVente*a.qte) %}
			{% endfor %}
			{% if somme == v.avance %}
				{% else %}
					<tr>
						<td style="width: 10%;">{{v.Client.NomClient}}</td>
						<td style="width: 10%;">{{v.dateV | date('d/m/Y')}}</td>
						<td style="width: 50%;">
							<table style="text-align: left;;width:100%;font-size: 10px; ">
								<tr style="background-color: blue; color: gold; font-size: 12px; ">
									<td style="width: 50%;">{% trans %}Article{% endtrans %}</td>
									<td style="width: 20%;">{% trans %}Prix{% endtrans %}</td>
									<td style="width: 10%;">{% trans %}Qt√©{% endtrans %}</td>
									<td style="width: 20%;">{% trans %}S.Total{% endtrans %}</td>
								</tr>
								{% set somme = 0 %}
								{% for a in v.articles %}
									<tr style="font-size: 12px; ">
										{% set somme = somme + (a.prixVente * a.qte) %}
										<td style="width: 50%;">{{a.nom}}</td>
										<td style="width: 20%;">{{a.prixVente}}</td>
										<td style="width: 10%;">{{a.qte}}</td>
										<td style="width: 20%;">{{(a.prixVente * a.qte)|number_format(2,',','')}}</td>
									</tr>
								{% endfor %}
							</table>
						</td>
						<td style="width: 10%;">
							{{somme|number_format(2,',','')}}
						</td>
						<td style="width: 10%;">
							{{v.avance|number_format(2,',','')}}
						</td>
						<td style="width: 10%;">
							{{(somme - v.avance)|number_format(2,',','')}}
						</td>
					</tr>
			{% endif %}
		{% endfor %}
	</table>
	
