{% extends 'base.html.twig' %} {% block title %}{% trans %}Ajouter une nouvelle Categorie{% endtrans %} {% endblock %} {% block body %}
<br>
{% for message in app.flashes('success') %}
	<div class="alert alert-success" role="alert">
		{{ message }}
	</div>
{% endfor %}

<div class="container">
    <h3 class="h4">{% trans %}Ajouter{% endtrans %}</h3>

    <div class="form_reponse ">
        {{ form_start(form) }}
        <table>
            <tr>
                <td>{% trans %}Nom Categorie:{% endtrans %}</td>
                <td>{{ form_widget(form.nomCategorie,{ 'attr': {'placeholder': ""} }) }}
                </td>
<td>
	<button class="b1" type="submit ">{% trans %}Enregistrer{% endtrans %}</button>
</td>

            </tr>
            {{ form_end(form) }}
        </table>
    </div>

</div>
<div><br>
    <center> <button class="boutonarticle">
            <h3 class="animate__animated animate__zoomIn">{% trans %}Liste Categorie{% endtrans %}</h3>
        </button></center>
    <div>
        <table class="table table-dark ">
            <thead>
                <th>{% trans %}id{% endtrans %} </th>
                <th>{% trans %}Nom Categorie:{% endtrans %}</th>
                <th>{% trans %}edit{% endtrans %}</th>
                <th>{% trans %}delete{% endtrans %}</th>
            </thead>{% if cat |length == 0 %}
            <tbody>
                <tr>
                    <td colspan="4">{% trans %}aucune categorie dans la bd{% endtrans %}</td>
                </tr>
            </tbody>{% else %}{% for a in cat %}
            <tbody>
                <td>{{a.id}}</td>
                <td>{{a.nomCategorie}}</td>
                <td>
                    <a href=" {{path( 'edit_cat',{id:a.id})}} ">
                        <img src="{{ asset('images/edit.png' ) }} " /></a>
                </td>
                <td>
                    <a href="{{path( 'delete_cat',{id:a.id})}} " onclick="return confirm( 'Vous etes sur de vouloir supprimer cet article?') ">
                        <img src="{{ asset('images/delet.png' ) }}" /></a>
                </td>
            </tbody>
            {% endfor%}
        </table>
    </div>{% endif %}
</div>
{% endblock %}