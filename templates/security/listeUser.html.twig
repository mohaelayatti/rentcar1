{% extends 'base.html.twig' %}
	{% block title %}liste users{% endblock %}


{% block body %}
	<br>
	<div class="container">
		
		<div class="liste_user">
			<button class="boutonarticle">
				<h3 class="animate__animated animate__zoomIn">{% trans %}Liste Utilisateurs{% endtrans %}</h3>
			</button>
			<table class="table table-dark ">
				<thead>
					<th>{% trans %}id User{% endtrans %}</th>
					<th>{% trans %}Nom Utilisateur{% endtrans %}</th>
					<th>{% trans %}Email{% endtrans %}</th>
					<th>{% trans %}Role{% endtrans %}</th>
					<th>{% trans %}edit{% endtrans %}</th>
					<th>{% trans %}delete{% endtrans %}</th>
				</thead>
				{% if users|length == 0 %}
					<tbody>
						<tr>
							<td colspan="6 ">{% trans %}aucun user dans la bd{% endtrans %}</td>
						</tr>
					</tbody>
				{% else %}
					{% for a in users %}
						<tbody>
							<td>{{a.id}}</td>
							<td>{{a.username}}</td>
							<td>{{a.email}}</td>
							<td>
								{% for role in a.roles %}
									{% if role == 'ROLE_ADMIN' %}
										Admin{% else %}User
									{% endif %}
								{% endfor %}
							</td>
							<td>
								<a href=" {{path( 'edit_user',{id:a.id})}} ">
									<img src="{{ asset( 'images/edit.png' ) }} "/></a>
							</td>
							<td>
								<a href="{{path( 'delete_user',{id:a.id})}} " onclick="return confirm( 'Vous etes sur de vouloir supprimer cet article?') ">
									<img src="{{ asset( 'images/delet.png' ) }} "/></a>
							</td>
						</tbody>
						{% endfor%}
					</table>
				</div>
			{% endif %}
		</div>
	{% endblock %}
